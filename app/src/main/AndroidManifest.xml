<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.chenao.stroopers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logoapk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoapk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".actividades.AcercaDeActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".actividades.ActivityValores" android:screenOrientation="portrait"></activity>
        <activity android:name=".actividades.ActivityRiego" android:screenOrientation="portrait"></activity>
        <activity android:name=".actividades.ActivityLuces" android:screenOrientation="portrait"></activity>
        <activity android:name=".actividades.ActivityTutoriales" android:screenOrientation="portrait"></activity>
        <activity android:name=".actividades.ActivityContactos" android:screenOrientation="portrait"></activity>
        <activity android:name=".actividades.ActivityNotificaciones" android:screenOrientation="portrait"></activity>

        <activity android:name=".MainActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".actividades.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actividades.AjustesActivity"
            android:parentActivityName=".MainActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>